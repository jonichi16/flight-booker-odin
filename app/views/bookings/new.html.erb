<h3>Bookings</h3>

<div class="flight-details-card">
  <div class="flight-id">
    <p>Flight ID: <%= @flight.id %></p>
  </div>
  <div class="departure-details">
    <p><%= @flight.date.strftime("%I:%M %p") %></p>
    <p><%= @flight.departure_airport.name %> <span>(<%= @flight.departure_airport.code %>)</span></p>
  </div>
  <div class="trip_details">
    <p>Nonstop</p>
    <p><%= pluralize(@flight.duration, "hour") %></p>
  </div>
  <div class="arrival-details">
    <p><%= (@flight.date + @flight.duration.hour).strftime("%I:%M %p") %></p>
    <p><%= @flight.arrival_airport.name %> <span>(<%= @flight.arrival_airport.code %>)</span></p>
  </div>
</div>

<h3>Please Enter Passenger Information:</h3>

<%= form_with model: @booking do |form| %>
  <% i = 0 %>
  <%= form.fields_for :passengers do |sub_form| %>
    <p>Passenger <%= i + 1 %></p>
    <div class="passenger-details">
      <div class="field">
        <%= sub_form.label :name %>
        <%= sub_form.text_field :name %>
      </div>
      <div class="field">
        <%= sub_form.label :email %>
        <%= sub_form.email_field :email %>
      </div>
    </div>
    <% i += 1 %>
  <% end %>

  <%= form.submit "Purchase #{"Ticket".pluralize(i)}" %>
<% end %>